using System.Collections;
using System.Collections.Generic;
using UnityEngine;

public class Test223 : MonoBehaviour
{
    // 정수 n이 주어질 때, n이하의 짝수를 모두 더한 값을 return 하도록 solution 함수를 작성해주세요.

    void Start()
    {
        Solution(10);
        Solution(4);
    }

    int Solution(int n)
    {
        int correct = 0;

        for (int i = 0; i <= n; i = i + 2)
        {
            correct += i;
        }

        Debug.Log(correct);
        return correct;
    }
}
