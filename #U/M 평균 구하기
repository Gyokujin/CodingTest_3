// 정수를 담고 있는 배열 arr의 평균값을 return하는 함수, solution을 완성해보세요.
public class Solution
{
    public double solution(int[] arr)
    {
        int sum = 0;

        for (int i = 0; i < arr.Length; i++)
        {
            sum += arr[i];
        }
            
        double answer = (double)sum / (double)arr.Length;
        return answer;
    }
}
