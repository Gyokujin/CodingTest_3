using System;

// 정수 n이 매개변수로 주어질 때 n의 각 자리 숫자의 합을 return하도록 solution 함수를 완성해주세요
public class Solution 
{
    public int solution(int n) 
    {
        int answer = 0;
        string numWord = n.ToString();
        
        for (int i = 0; i < numWord.Length; i++)
        {
            answer += int.Parse(numWord[i].ToString());
        }
        
        return answer;
    }
}
